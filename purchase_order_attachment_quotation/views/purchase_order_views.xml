<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_purchase_order_form_inherit_attachment" model="ir.ui.view">
    <field name="name">purchase.order.form.attachment</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <!-- Tambahkan setelah order_line -->
      <xpath expr="//field[@name='order_line']" position="after">
        <group>
          <separator string="Quotation Attachment"/>
          <field name="quotation_attachment_ids"
                 widget="many2many_binary"
                 options="{'acceptedFileExtensions': ['pdf']}"
                 placeholder="Upload up to 2 PDF files here..."/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
