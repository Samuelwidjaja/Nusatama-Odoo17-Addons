<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_order_form_inherit_attachment" model="ir.ui.view">
    <field name="name">sale.order.form.attachment</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">

      <!-- Tambahkan section setelah order_line -->
      <xpath expr="//field[@name='order_line']" position="after">
        <group>
          <separator string="Quotation Attachment"/>

          <!-- Field many2many_binary langsung di form -->
          <field name="quotation_attachment_ids" widget="many2many_binary"
                 options="{'accepted_file_extensions': ['pdf']}"
                 help="Attach up to 2 PDF files for quotation."/>

          <!-- Tombol untuk membuka list attachment -->
<!--          <button name="action_open_quotation_attachments"
                  type="object"
                  string="Upload / View Attachments"
                  class="oe_highlight"
                  icon="fa-paperclip"/> -->
        </group>
      </xpath>

    </field>
  </record>
</odoo>
